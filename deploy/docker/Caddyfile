{
    # Global options
    email your-email@example.com

    # Enable the layer4 app for TCP proxying
    layer4 {
        # TLS-encrypted TCP proxy on port 8443
        chat.yourdomain.com:8443 {
            @chat_traffic {
                tls
            }
            route @chat_traffic {
                tls
                proxy chat_server:8080
            }
        }

        # Non-TLS fallback on standard port (optional, for testing)
        :8080 {
            route {
                proxy chat_server:8080
            }
        }
    }
}
